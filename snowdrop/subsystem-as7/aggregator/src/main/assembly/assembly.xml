<assembly>
    <id>deployer-module</id>
    <formats>
        <format>zip</format>
    </formats>
    <baseDirectory>/</baseDirectory>
    <fileSets>
        <fileSet>
            <directory>${basedir}/../modules/spring-3.2/src/main/module</directory>
            <outputDirectory>module-spring-3.2/org/springframework/spring/snowdrop</outputDirectory>
            <includes>
                <include>module.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/../modules/spring-3.2/target/dependency/lib</directory>
            <outputDirectory>module-spring-3.2/org/springframework/spring/snowdrop</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>${basedir}/../modules/spring-4.0/src/main/module</directory>
            <outputDirectory>module-spring-4.0/org/springframework/spring/snowdrop</outputDirectory>
            <includes>
                <include>module.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/../modules/spring-4.0/target/dependency/lib</directory>
            <outputDirectory>module-spring-4.0/org/springframework/spring/snowdrop</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>${basedir}/../modules/spring-4.1/src/main/module</directory>
            <outputDirectory>module-spring-4.1/org/springframework/spring/snowdrop</outputDirectory>
            <includes>
                <include>module.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/../modules/spring-4.1/target/dependency/lib</directory>
            <outputDirectory>module-spring-4.1/org/springframework/spring/snowdrop</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>${basedir}/../subsystem-as7/src/main/module</directory>
            <outputDirectory>module-deployer/org/jboss/snowdrop/main</outputDirectory>
            <includes>
                <include>module.xml</include>
            </includes>
        </fileSet>



        <fileSet>
            <!-- Only get the Snowdrop files from /dependency/lib and not the Spring JARs, they are fetched from the above fileset.
                 This allows us to pick the version of Spring we want when we install. -->
            <directory>${basedir}/../subsystem-as7/target/dependency/lib</directory>
            <outputDirectory>module-deployer/org/jboss/snowdrop/main</outputDirectory>
            <includes>
                <include>snowdrop-vfs.jar</include>
                <include>snowdrop-interceptors.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/../subsystem-as7/target</directory>
            <outputDirectory>module-deployer/org/jboss/snowdrop/main</outputDirectory>
            <includes>
                <include>snowdrop-subsystem-as7.jar</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
